<div class="row">
  <div class=""><%= button_to t("new_game"), new_game_path, :class => 'btn btn-large btn-primary', :method => :get %></div>
</div>
<% if ! @games.nil? %>
<div class="row">
  <div class="span2">t("previous_game")</div>
</div>
  <% @games.each do |game| %>
<div class="row">
  <div class="offset1 span2"><%= link_to game.created_at, game_path(@game), :class => 'gamesession', :method => :get %></div>
</div>
  <% end %>

<% end %>
